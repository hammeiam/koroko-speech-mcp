{
  "name": "@modelcontextprotocol/server-speech",
  "version": "1.0.0",
  "description": "MCP server for text-to-speech conversion using Orpheus model",
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-server-speech": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "tts",
    "text-to-speech"
  ],
  "author": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "kokoro-js": "^1.0.0",
    "node-wav-player": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  }
}